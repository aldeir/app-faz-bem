{
  "rules": {
    "status": {
      // O superadmin pode ler a lista completa de usuários online.
      ".read": "auth.token.email === 'aldeir@gmail.com'",
      "$uid": {
        // Cada usuário só pode escrever no seu próprio status de presença.
        ".write": "auth.uid === $uid",
        // Ninguém além do superadmin pode ler o status individual de outro usuário.
        ".read": "auth.uid === $uid || auth.token.email === 'aldeir@gmail.com'"
      }
    }
  }
}
