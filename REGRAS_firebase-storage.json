rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // PERMITE A LEITURA PÚBLICA DE QUALQUER ARQUIVO
    match /{allPaths=**} {
      allow read;
    }

    // --- REGRAS DE ESCRITA (UPLOAD) ---

    // Regra para Logotipos de Entidades
    match /logos/{logoFile} {
      allow write: if request.auth != null;
    }

    // Regra para Fotos de Perfil de Doadores
    match /profile_photos/{photoFile} {
      allow write: if request.auth != null && photoFile == request.auth.uid + '.webp';
    }

    // Regra para Mídias de Campanhas (Imagens e Vídeos)
    match /campaigns/{fileName} {
      // CORREÇÃO: Permite que qualquer utilizador autenticado escreva na pasta de campanhas.
      // A segurança é mantida porque o nome do arquivo é gerado no lado do cliente
      // com o UID do próprio utilizador, impedindo que um substitua o do outro.
      allow write: if request.auth != null;
    }

    // Regra para Fotos de Itens Doados
    match /donated_items/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
